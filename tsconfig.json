{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "target": "es2022", // as per https://node.green/ v14 fully supports es2020
    "module": "es2022",
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "./**/*.ts"
  ]
}
